<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:complexType name="txn">
    <xs:all>
      <xs:element name="beneficiary" type="xs:integer" minOccurs="1" maxOccurs="1"/>
      <xs:element name="date" type="xs:dateTime" minOccurs="1" maxOccurs="1"/>
      <xs:element name="sign" type="xs:string" minOccurs="1" maxOccurs="1"/>
      <xs:element name="amount" type="xs:integer" minOccurs="1" maxOccurs="1"/>
    </xs:all>
    <xs:attribute name="id" usage="required">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:pattern value="/?[0-9]+"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>
  <xs:complexType name="ledger">
    <xs:sequence>
      <xs:element name="txn" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:unique name="txnUnique">
      <xs:selector xpath="./txn"/>
      <xs:field xpath="@id"/>
    </xs:unique>
  </xs:complexType>
  <xs:element name="wallet">
    <xs:complexType>
      <xs:all>
        <xs:element name="id" type="xs:integer" minOccurs="1" maxOccurs="1"/>
        <xs:element name="pkey" type="xs:string" minOccurs="1" maxOccurs="1"/>
        <xs:element name="ledger" type="ledger" minOccurs="1" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
  </xs:element>
</xs:schema>
